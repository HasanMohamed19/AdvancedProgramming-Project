@using ServiceTitanWebApp.ViewModels
@using ServiceTitanBusinessObjects
@model ServiceDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Service</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Service.ServiceName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Service.ServiceName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Service.ServiceDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Service.ServiceDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Service.ServicePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Service.ServicePrice) BHD
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Service.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.ServiceTechnicians)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Technicians.Count() != 0)
            {
                @foreach (var tech in Model.Technicians)
                {
                    @tech.FullName <br />
                }
            } else
            {
                <span class="fst-italic">No Technicians</span>
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Service.ServiceID" class="btn btn-primary">Edit</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
