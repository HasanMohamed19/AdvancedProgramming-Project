@model IEnumerable<ServiceTitanBusinessObjects.Notification>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NotificationList</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NotificationMessage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationMessage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationStatus.NotificationStatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Password)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NotificationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NotificationID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NotificationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
