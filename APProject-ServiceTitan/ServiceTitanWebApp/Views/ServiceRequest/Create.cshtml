@model ServiceTitanWebApp.ViewModels.CreateRequestViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Service Request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                if (Model != null)
                {
                    <div class="form-group">
                        <h5>Service: @Model.Service.ServiceName</h5>
                        <h5>Price: @Model.Service.ServicePrice BHD</h5>
                    </div>
                }
            }
            <input asp-for="ServiceId" class="d-none" />
            <div class="form-group">
                <label asp-for="Request.RequestDescription" class="control-label"></label>
                <input asp-for="Request.RequestDescription" class="form-control" />
                <span asp-validation-for="Request.RequestDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.RequestDateNeeded" class="control-label"></label>
                <input asp-for="Request.RequestDateNeeded" class="form-control" />
                <span asp-validation-for="Request.RequestDateNeeded" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="TechnicianId" class="control-label"></label>
                <select asp-for="TechnicianId" class ="form-control" asp-items="ViewBag.TechnicianId"></select>
            </div> *@
            
            
            @* <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class ="form-control" asp-items="ViewBag.StatusId"></select>
            </div> *@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

